<?xml version="1.0" encoding="utf-8"?>
<!--suppress AndroidDomInspection -->
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1.5dp"
    android:foreground="?attr/selectableItemBackground"
    android:transitionName="background_transition"
    card_view:cardBackgroundColor="@color/card_color">

    <android.support.percent.PercentFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/quality"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:transitionName="quality_transition"
            app:layout_aspectRatio="100%"
            app:layout_widthPercent="100%"/>

        <ImageView
            android:id="@+id/effect"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:transitionName="effect_transition"
            app:layout_aspectRatio="100%"
            app:layout_widthPercent="100%"/>

        <ImageView
            android:id="@+id/icon"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:transitionName="icon_transition"
            app:layout_aspectRatio="100%"
            app:layout_widthPercent="100%"/>

        <ImageView
            android:id="@+id/paint"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:transitionName="paint_transition"
            app:layout_aspectRatio="100%"
            app:layout_widthPercent="100%"/>

    </android.support.percent.PercentFrameLayout>

</android.support.v7.widget.CardView>