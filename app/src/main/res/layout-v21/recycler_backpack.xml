<?xml version="1.0" encoding="utf-8"?>
<com.tlongdev.bktf.view.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="@drawable/simple_grid_item_background"
    android:padding="1dp">

    <com.tlongdev.bktf.view.SquareImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_background_blank"
        android:transitionName="background_transition" />

    <com.tlongdev.bktf.view.SquareImageView
        android:id="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:transitionName="icon_transition" />

</com.tlongdev.bktf.view.SquareFrameLayout>