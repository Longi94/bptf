<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="1.5dp"
    android:foreground="@drawable/simple_selector_white"
    android:transitionName="background_transition"
    card_view:cardBackgroundColor="@color/card_color">

    <com.tlongdev.bktf.view.SquareImageView
        android:id="@+id/effect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:transitionName="effect_transition" />

    <com.tlongdev.bktf.view.SquareImageView
        android:id="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:transitionName="icon_transition" />

    <com.tlongdev.bktf.view.SquareImageView
        android:id="@+id/paint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:transitionName="paint_transition" />

</android.support.v7.widget.CardView>