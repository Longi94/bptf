<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    card_view:cardBackgroundColor="@color/card_color">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/quality"
            android:layout_width="84dp"
            android:layout_height="84dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            card_view:srcCompat="@color/card_color" />

        <ImageView
            android:id="@+id/effect"
            android:layout_width="84dp"
            android:layout_height="84dp"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:srcCompat="@color/card_color" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="84dp"
            android:layout_height="84dp"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:srcCompat="@color/card_color" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="4dp"
            android:layout_height="84dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            app:layout_constraintLeft_toRightOf="@+id/effect"
            app:layout_constraintTop_toTopOf="parent"
            card_view:srcCompat="@drawable/shadow_gradient_end" />

        <ImageView
            android:id="@+id/delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/description_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_close"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingPrefix"/>

        <TextView
            android:id="@+id/difference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:textAllCaps="true"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="difference" />

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@+id/imageView4"
            app:layout_constraintRight_toLeftOf="@+id/delete"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="ItemName"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:id="@+id/price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            app:layout_constraintLeft_toRightOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/name"
            tools:text="price"
            app:layout_constraintBottom_toBottomOf="@+id/count"
            android:layout_marginBottom="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" X "
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@+id/price"
            app:layout_constraintTop_toBottomOf="@+id/name"
            android:id="@+id/textView11"
            app:layout_constraintBottom_toBottomOf="@+id/count"
            android:layout_marginBottom="0dp" />

        <com.tlongdev.bktf.ui.view.LoseFocusEditText
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:lines="1"
            android:text="1"
            app:layout_constraintTop_toBottomOf="@+id/name"
            app:layout_constraintLeft_toRightOf="@+id/textView11" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>