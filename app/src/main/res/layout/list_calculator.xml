<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    card_view:cardBackgroundColor="@color/card_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:minHeight="84dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="84dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/effect"
                android:layout_width="84dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/description_icon"
                android:minHeight="84dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/icon"
                android:layout_width="84dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/description_icon"
                android:minHeight="84dp"
                android:scaleType="centerCrop" />

        </FrameLayout>

        <ImageView
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:src="@drawable/shadow_gradient_end" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="26dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="26dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_view_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/image_view_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/simple_selector_white"
            android:contentDescription="@string/description_delete"
            android:padding="8dp"
            android:src="@drawable/ic_delete_white_24dp" />

    </LinearLayout>

</android.support.v7.widget.CardView>