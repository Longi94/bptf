<?xml version="1.0" encoding="utf-8"?>
<!--Layout resource used for items in the recyclerview in the advanced calculator.-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingEnd="16dp"
    android:paddingLeft="8dp"
    android:paddingRight="16dp"
    android:paddingStart="8dp">

    <!--Icon of the item-->
    <ImageView
        android:id="@+id/icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/description_icon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!--Name of the item-->
        <TextView
            android:id="@+id/text_view_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/text_secondary"
            android:textSize="16sp" />

        <!--Price of the item-->
        <TextView
            android:id="@+id/text_view_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

    </LinearLayout>

    <!--Count of the item-->
    <TextView
        android:id="@+id/text_view_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_secondary"
        android:textSize="20sp" />

    <!--Image used as a button for removing the item-->
    <ImageView
        android:id="@+id/image_view_delete"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/icon_selector"
        android:contentDescription="@string/description_delete"
        android:src="@drawable/ic_delete_black_24dp" />

</LinearLayout>