<?xml version="1.0" encoding="utf-8"?><!--Layout resources for items in the latest changes list.-->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:foreground="@drawable/simple_selector_white"
    card_view:cardBackgroundColor="#393939">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="84dp"
            android:layout_height="wrap_content">

            <!--Icon of the item-->
            <ImageView
                android:id="@+id/image_view_item_effect"
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:contentDescription="@string/description_icon"
                android:minHeight="84dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/image_view_item_icon"
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:contentDescription="@string/description_icon"
                android:minHeight="84dp"
                android:scaleType="centerCrop" />

        </FrameLayout>

        <ImageView
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:src="@drawable/shadow_gradient" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!--Name of the item-->
            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

            <!--Price of the item-->
            <TextView
                android:id="@+id/item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/text_secondary" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>