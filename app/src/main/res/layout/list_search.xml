<?xml version="1.0" encoding="utf-8"?>
<!--Layout resource for showing results in the search fragment.-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="2dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="2dp">

    <FrameLayout
        android:layout_width="64dp"
        android:layout_height="55dp">

        <!--Background of the item icon-->
        <ImageView
            android:id="@+id/image_view_item_background"
            android:layout_width="64dp"
            android:layout_height="55dp"
            android:contentDescription="@string/description_background" />

        <!--Icon of the item-->
        <ImageView
            android:id="@+id/image_view_item_icon"
            android:layout_width="64dp"
            android:layout_height="55dp"
            android:contentDescription="@string/description_icon"
            android:scaleType="centerCrop" />

    </FrameLayout>

    <!--Name of the item-->
    <TextView
        android:id="@+id/item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingEnd="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        android:textSize="16sp"
        android:textColor="@color/text_secondary" />

    <!--Price of the item-->
    <TextView
        android:id="@+id/item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|end"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="@color/text_secondary" />

</LinearLayout>