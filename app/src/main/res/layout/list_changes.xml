<?xml version="1.0" encoding="utf-8"?>
<!--Layout resources for items in the latest changes list.-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="2dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="2dp">

    <FrameLayout
        android:layout_width="84dp"
        android:layout_height="72dp">

        <!--Background of the item-->
        <ImageView
            android:id="@+id/image_view_item_background"
            android:layout_width="84dp"
            android:layout_height="72dp"
            android:contentDescription="@string/description_background" />

        <!--Icon of the item-->
        <ImageView
            android:id="@+id/image_view_item_icon"
            android:layout_width="84dp"
            android:layout_height="72dp"
            android:contentDescription="@string/description_icon"
            android:scaleType="centerCrop" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="4dp">

        <!--Name of the item-->
        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingEnd="2dp"
            android:paddingRight="2dp"
            android:paddingLeft="2dp"
            android:textColor="#000"
            android:textSize="16sp" />

        <!--Price of the item-->
        <TextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" />

    </LinearLayout>

    <!--Visual icon indicating the change in price.-->
    <ImageView
        android:id="@+id/image_view_change"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:contentDescription="@string/description_change" />

</LinearLayout>