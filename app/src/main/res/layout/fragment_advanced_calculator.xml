<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    tools:context="com.tlongdev.bktf.fragment.AdvancedCalculatorFragment">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="8dp"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_view_price_metal"
                    android:layout_width="match_parent"
                    android:layout_height="29.5dp"
                    android:gravity="center"
                    android:text="0 ref"/>

                <View
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    style="@style/DividerHorizontal"
                    android:background="@android:color/darker_gray"/>


                <TextView
                    android:id="@+id/text_view_price_buds"
                    android:layout_width="match_parent"
                    android:layout_height="29.5dp"
                    android:gravity="center"
                    android:text="0 buds"/>

            </LinearLayout>

            <View
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                style="@style/DividerVertical"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_view_price_keys"
                    android:layout_width="match_parent"
                    android:layout_height="29.5dp"
                    android:gravity="center"
                    android:text="0 keys"/>

                <View
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    style="@style/DividerHorizontal"
                    android:background="@android:color/darker_gray"/>


                <TextView
                    android:id="@+id/text_view_price_usd"
                    android:layout_width="match_parent"
                    android:layout_height="29.5dp"
                    android:gravity="center"
                    android:text="$0"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:paddingTop="70dp"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"/>

    <ImageView
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_gravity="bottom|end"
        android:src="@drawable/circular_button_shadow"/>

    <ImageButton
        android:id="@+id/image_button_add"
        android:layout_margin="16dp"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_add_white_24dp"
        android:background="@drawable/floating_action_button"/>


</FrameLayout>