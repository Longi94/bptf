<?xml version="1.0" encoding="utf-8"?>
<!--Layout resource fo user page layout.-->
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tlongdev.bktf.fragment.UserFragment">

    <!--Scrollview is needed for the SwipeRefreshLayout to work.-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="8dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <FrameLayout
                        android:layout_width="128dp"
                        android:layout_height="128dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp">

                        <!--Progress bar indicating the downloading of the avatar-->
                        <ProgressBar
                            android:id="@+id/progress_bar"
                            style="@android:style/Widget.DeviceDefault.ProgressBar.Large"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_gravity="center"
                            android:visibility="invisible" />

                        <!--Avatar-->
                        <ImageView
                            android:id="@+id/player_avatar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/frame_user_state_offline"
                            android:contentDescription="@string/description_player_avatar" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!--Name of the user-->
                        <TextView
                            android:id="@+id/text_view_player_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textSize="28sp" />

                        <!--Reputation of the player-->
                        <TextView
                            android:id="@+id/text_view_player_reputation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/user_page_reputation" />

                        <!--Age of the user's steam account-->
                        <TextView
                            android:id="@+id/text_view_user_since"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/user_page_user_since" />

                        <!--How long was it since the user was last online-->
                        <TextView
                            android:id="@+id/text_view_user_last_online"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/user_page_last_online" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="4dp"
                    card_view:cardCornerRadius="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!--Bazaar.tf-->
                        <Button
                            android:id="@+id/button_bazaar_tf"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:text="@string/user_page_link_bazaar" />

                        <!--Tf2Outpost-->
                        <Button
                            android:id="@+id/button_tf2op"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:text="@string/user_page_link_tf2op" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!--Tf2TradePost-->
                        <Button
                            android:id="@+id/button_tf2tp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:text="@string/user_page_link_tf2tp" />

                        <!--SteamRep-->
                        <Button
                            android:id="@+id/button_steamrep"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:text="@string/user_page_link_steamrep" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!--Steam account-->
                        <Button
                            android:id="@+id/button_steam_community"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:text="@string/user_page_link_community" />

                        <!--Backpack-->
                        <Button
                            android:id="@+id/button_backpack"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:text="@string/user_page_link_backpack" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingEnd="4dp"
                        android:paddingLeft="0dp"
                        android:paddingRight="4dp"
                        android:paddingStart="0dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/user_page_status"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!--Trust score of the user-->
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/user_page_trust"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/text_view_trust_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/status_background_neutral"
                                android:paddingEnd="3dp"
                                android:paddingLeft="3dp"
                                android:paddingRight="3dp"
                                android:text="@string/placeholder_unknown"
                                android:textColor="#fff"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <View
                            style="@style/DividerHorizontal.Margins"
                            android:background="#555" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!--Steamrep status-->
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/user_page_link_steamrep"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/text_view_steamrep_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/status_background_neutral"
                                android:paddingEnd="3dp"
                                android:paddingLeft="3dp"
                                android:paddingRight="3dp"
                                android:text="@string/placeholder_unknown"
                                android:textColor="#fff"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <View
                            style="@style/DividerHorizontal.Margins"
                            android:background="#555" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!--Steam trade status-->
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/user_page_trade_status"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/text_view_trade_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/status_background_neutral"
                                android:paddingEnd="3dp"
                                android:paddingLeft="3dp"
                                android:paddingRight="3dp"
                                android:text="@string/placeholder_unknown"
                                android:textColor="#fff"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <View
                            style="@style/DividerHorizontal.Margins"
                            android:background="#555" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!--VAC satus-->
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/user_page_vac"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/text_view_vac_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/status_background_neutral"
                                android:paddingEnd="3dp"
                                android:paddingLeft="3dp"
                                android:paddingRight="3dp"
                                android:text="@string/placeholder_unknown"
                                android:textColor="#fff"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <View
                            style="@style/DividerHorizontal.Margins"
                            android:background="#555" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!--Community status-->
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/user_page_link_community"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/text_view_community_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/status_background_neutral"
                                android:paddingEnd="3dp"
                                android:paddingLeft="3dp"
                                android:paddingRight="3dp"
                                android:text="@string/placeholder_unknown"
                                android:textColor="#fff"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingEnd="4dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:paddingStart="4dp">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/user_page_link_backpack"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!--Backpack value in refined metal-->
                            <TextView
                                android:id="@+id/text_view_bp_refined"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/placeholder_unknown"
                                android:textColor="#000"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/user_page_refined"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <View
                            style="@style/DividerHorizontal.Margins"
                            android:background="#555" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!--Number of raw metal in backpack.-->
                            <TextView
                                android:id="@+id/text_view_bp_raw_metal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/placeholder_unknown"
                                android:textColor="#000"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/user_page_metal"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <View
                            style="@style/DividerHorizontal.Margins"
                            android:background="#555" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!--Number of raw keys in backpack-->
                            <TextView
                                android:id="@+id/text_view_bp_raw_keys"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/placeholder_unknown"
                                android:textColor="#000"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/user_page_keys"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <View
                            style="@style/DividerHorizontal.Margins"
                            android:background="#555" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!--Backpack value in usd-->
                            <TextView
                                android:id="@+id/text_view_bp_usd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/placeholder_unknown"
                                android:textColor="#000"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/user_page_usd"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <View
                            style="@style/DividerHorizontal.Margins"
                            android:background="#555" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!--Number of used and all slots in backpack-->
                            <TextView
                                android:id="@+id/text_view_bp_slots"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/placeholder_slots_used"
                                android:textColor="#000"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/user_page_slots"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</android.support.v4.widget.SwipeRefreshLayout>
