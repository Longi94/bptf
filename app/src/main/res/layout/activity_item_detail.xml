<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="16dp">

        <LinearLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            tools:context="com.tlongdev.bktf.ItemDetailActivity">

            <com.tlongdev.bktf.view.SquareFrameLayout
                android:id="@+id/relative_layout_image"
                android:layout_width="0dp"
                android:layout_height="0dp" >

                <com.tlongdev.bktf.view.SquareImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/image_view_item_background"
                    android:background="@drawable/item_background_blank"
                    android:transitionName="background_transition"
                    />

                <com.tlongdev.bktf.view.SquareImageView
                    android:id="@+id/image_view_item_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:transitionName="icon_transition"/>

            </com.tlongdev.bktf.view.SquareFrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_view_name"
                android:text="Modest Pile of Hats"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_view_level"
                android:text="Level 1 Hat"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_view_effect_name"
                android:text="Effect: Terror-Watt"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_view_custom_name"
                android:text="Custom name"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_view_custom_desc"
                android:text="Custom description"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_view_crafted"
                android:text="Crafted by Drop"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_view_gifted"
                android:text="Gifted by Drop"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_view_origin"
                android:text="Origin: Drop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_view_paint"
                android:text="Paint: Pink as Hell"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_view_price"
                android:text="1 Earbuds"
                android:visibility="gone"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>


