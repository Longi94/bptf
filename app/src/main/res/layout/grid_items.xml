<?xml version="1.0" encoding="utf-8"?>
<!--Layout resources for grid items with prices-->
<com.tlongdev.bktf.view.CustomLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:background="@drawable/item_background_unusual">

    <com.tlongdev.bktf.view.CustomLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_view_item_effect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/simple_selector_white"
            android:padding="3dp"
            android:scaleType="centerCrop" />

        <!--Icon of the item-->
        <ImageView
            android:id="@+id/image_view_item_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/simple_selector_white"
            android:padding="3dp"
            android:scaleType="centerCrop" />

    </com.tlongdev.bktf.view.CustomLayout>

    <!--Price of the item-->
    <TextView
        android:id="@+id/grid_item_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="3dp"
        android:background="#44000000"
        android:gravity="center"
        android:padding="4dp"
        android:textColor="#fff" />

</com.tlongdev.bktf.view.CustomLayout>