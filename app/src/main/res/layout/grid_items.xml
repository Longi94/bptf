<?xml version="1.0" encoding="utf-8"?><!--Layout resources for grid items with prices-->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/simple_grid_item_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <!--Icon of the item-->
            <com.tlongdev.bktf.view.SquareImageView
                android:id="@+id/image_view_item_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/tf2_unusual_color_dark"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:layout_alignBottom="@id/image_view_item_icon" >

                <com.tlongdev.bktf.view.SquareImageView
                    android:id="@+id/image_view_item_change"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:visibility="invisible"/>

            </LinearLayout>

        </RelativeLayout>


        <!--Price of the item-->
        <TextView
            android:id="@+id/grid_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="4dp"
            android:textColor="#000" />

    </LinearLayout>
</android.support.v7.widget.CardView>