<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/bptf_main_blue</item>
        <item name="colorPrimaryDark">@color/bptf_main_blue_dark</item>
        <item name="colorAccent">@color/bptf_main_blue</item>
        <item name="actionBarStyle">@style/bptfActionBar</item>

        <!-- enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>

        <!-- specify shared element transitions -->
        <item name="android:windowSharedElementEnterTransition">
            @transition/change_image_transform
        </item>
        <item name="android:windowSharedElementExitTransition">
            @transition/change_image_transform
        </item>

    </style>

    <!-- ActionBar styles -->
    <style name="bptfActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">

        <item name="background">@color/bptf_main_blue</item>
        <item name="elevation">0dp</item>

    </style>

    <!--Dialog style-->
    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/bptf_main_blue</item>
        <item name="colorPrimaryDark">@color/bptf_main_blue_dark</item>
        <item name="colorAccent">@color/bptf_main_blue</item>
        <item name="actionBarStyle">@style/bptfActionBar</item>
    </style>

    <!--Style for simulating dialogs. This is needed for shared elements transition to work with
    dialogs-->
    <style name="AppTheme.Transparent" parent="AppTheme">

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>

    </style>

</resources>
