<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="@string/pref_main_preference_screen">

    <PreferenceCategory android:title="@string/pref_category_account">

        <Preference
            android:key="@string/pref_key_login"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_category_sync">

        <ListPreference
            android:defaultValue="1"
            android:key="@string/pref_auto_sync"
            android:entryValues="@array/pref_auto_sync_values"
            android:entries="@array/pref_auto_sync_entries"
            android:title="@string/pref_title_auto_sync" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/pref_price_notification"
            android:title="@string/pref_title_price_notification"
            android:summary="@string/pref_summary_price_notification" />

    </PreferenceCategory>

</PreferenceScreen>
