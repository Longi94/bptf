<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/pref_category_steam">
        <EditTextPreference
            android:key="@string/pref_steam_id"
            android:title="@string/pref_steam_id"
            android:defaultValue="@string/pref_steam_id_default"
            android:selectAllOnFocus="true"
            android:inputType="textCapWords"
            android:hint="@string/pref_steam_id_hint"
            android:singleLine="true"
            android:maxLines="1" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_category_sync">

        <CheckBoxPreference
            android:key="@string/pref_auto_sync"
            android:title="@string/pref_auto_sync_title"
            android:summaryOff="@string/pref_auto_sync_summary_off"
            android:summaryOn="@string/pref_auto_sync_summary_on"
            android:defaultValue="true" />

        <CheckBoxPreference
            android:key="@string/pref_background_sync"
            android:title="@string/pref_background_sync_title"
            android:defaultValue="false"/>

        <ListPreference
            android:key="@string/pref_sync_interval"
            android:title="@string/pref_sync_interval_title"
            android:entries="@array/pref_sync_interval_titles"
            android:entryValues="@array/pref_sync_interval_values"
            android:dependency="@string/pref_background_sync"
            android:defaultValue="3600000" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_category_notification">

        <CheckBoxPreference
            android:key="@string/pref_notification"
            android:title="@string/pref_notification_title"
            android:defaultValue="false"/>

        <ListPreference
            android:key="@string/pref_notification_interval"
            android:title="@string/pref_notification_interval_title"
            android:entries="@array/pref_notification_interval_titles"
            android:entryValues="@array/pref_notification_interval_values"
            android:dependency="@string/pref_notification"
            android:defaultValue="3600000" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_category_about">

        <Preference
            android:title="@string/pref_developer_title"
            android:summary="@string/pref_developer_summary"/>

        <Preference
            android:title="@string/pref_version_title"
            android:summary="@string/pref_version_summary"/>

        <Preference
            android:title="@string/pref_credits_title"
            android:key="@string/pref_credits_title"/>

        <Preference
            android:title="@string/pref_feedback_title"
            android:key="@string/pref_feedback_title"/>

        <Preference
            android:title="@string/pref_rate_title"
            android:key="@string/pref_rate_title"/>

    </PreferenceCategory>
</PreferenceScreen>
